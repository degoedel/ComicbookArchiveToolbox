<UserControl x:Class="ComicbookArchiveToolbox.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
	<Grid Background="Transparent">
		<Border CornerRadius="12" Padding="32" Margin="32"
                Effect="{DynamicResource DropShadowEffect}">
			<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500">
				<!-- App Title -->
				<TextBlock Text="Comicbook Archive Toolbox" 
                           FontSize="28" FontWeight="Bold" 
                           TextAlignment="Center" Margin="0,0,0,8"/>
				<TextBlock Text="Version 3.0" 
                           FontSize="16" FontWeight="SemiBold" 
                           Foreground="Gray" TextAlignment="Center" Margin="0,0,0,16"/>
				<!-- About Content -->
				<TextBlock Text="{Binding AboutContent}" 
                           TextWrapping="Wrap" 
                           FontSize="14"
                           Margin="0,0,0,16"
                           TextAlignment="Left"
                           IsHitTestVisible="True"
                           Focusable="True"
                           />
				<!-- Hyperlink -->
				<TextBlock TextAlignment="Center" FontSize="14">
                    <Run Text="For more details, source code and other dependencies, see: "/>
                    <Hyperlink NavigateUri="https://degoedel.github.io/ComicbookArchiveToolbox/"
                               RequestNavigate="Url_Click"
                               ToolTip="Open project website">
                        Comicbook Archive Toolbox Website
                    </Hyperlink>
				</TextBlock>
			</StackPanel>
		</Border>
	</Grid>
</UserControl>
